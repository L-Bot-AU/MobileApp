<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LBot.ViewModels"
             x:Class="LBot.Views.AutomateEgg"
             Title="Settings">
    <ContentPage.BindingContext>
        <vm:AppViewModel></vm:AppViewModel>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Label Text="Home Screen: " Style="{StaticResource plainText}"/>
                <Switch IsToggled="False" Grid.Column="1" Toggled="ToggleHomeChoice" OnColor="{StaticResource NavColor}"></Switch>
            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>